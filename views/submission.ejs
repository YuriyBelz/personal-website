<%- include('partials/headerpartial.ejs') %>
<!--- menu-wrapper div end -->
<div class="clearing"></div>
<div class="border-bottom"></div>
<div class="logo-wrapper">
  <div class="leftshadow"><img src="images/logo-wrap-left.jpg" /></div>
  <div class="logo">
    <h1>yuriybelzdotcom</h1>
  </div>
  <div class="rightshadow"><img src="images/logo-wrap-right.jpg" /></div>
</div>
<div class="clearing"></div>
<!--- banner wrapper div end -->
<div class="container">
  <div class="panel-wrapper">
    <div class="right-colum">
      <div class="title">
        <h1><%= selectedSubmission.title %></h1>
      </div>
      <div class="content">
<!--- beginning of carousel -->
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% let isFirstTarget = true;%><!--- only one element in carousel must be active, ternary adds acive and is then switched to false-->
    <% for(let i = 0; i < selectedImages.length; i++){%>
  <li data-target="#carouselExampleIndicators" data-slide-to=<%= i %> class=<%= (isFirstTarget ? 'active' : '') %>></li>
    <% isFirstTarget = false%>
    <% } %>
  </ol>
  <% let isFirstImg = true;%>
  <% selectedImages.forEach(function(imgTitle, index){%>
  <div class="carousel-inner">
    <div class=<%= 'carousel-item' + (isFirstImg ? ' active' : '') %>>
      <% isFirstImg = false %>
      <img class="d-block w-100" src=<%='/image_storage/' + selectedSubmission._id + '/' + imgTitle%> alt=<%= 'slide number ' + index %>>
    </div>
<% });%>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<!--- end of carousel -->
        <p>
          <>
          <nobr>Submitted by: </nobr>
          <%=selectedSubmission.owner%><br>
          <nobr>Date submitted: </nobr>
          <%=selectedSubmission.submitcreated%><br><br>
          <nobr>Submission description : </nobr>
          <%=selectedSubmission.description%>
        </p>
      </div>
    </div>
    <div><!-- comments section goes here--></div>
    <div class="clearing"></div>
  </div>
  <!--- panel wrapper div end -->
</div>
<!--- container div end -->
<script language="JavaScript" type="text/javascript" src="scripts/jquery.js"></script>
<script language="JavaScript" type="text/javascript" src="scripts/bootstrap.min.js"></script>
<script language="JavaScript" type="text/javascript">
  $(document).ready(function() {
    $('.carousel').carousel({
      interval: 3500
    })
  });
</script>
